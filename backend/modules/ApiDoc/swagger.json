{
	"openapi": "3.1.0",
	"info": {
		"title": "HashNama",
		"version": "1.0.0"
	},
	"components": {
		"securitySchemes": {
			"bearerAuth": {
				"type": "http",
				"scheme": "bearer",
				"bearerFormat": "JWT"
			}
		}
	},
	"tags": [
		{
			"name": "Auth"
		},
		{
			"name": "Market"
		},
		{
			"name": "WatchList"
		},
		{
			"name": "Wallet"
		},
		{
			"name": "Alert"
		}
	],
	"paths": {
		"/api/auth/register": {
			"post": {
				"tags": ["Auth"],
				"requestBody": {
					"content": {
						"application/json": {
							"schema": {
								"type": "object",
								"example": {
									"username": "pourya",
									"email": "pourya@gmail.com",
									"password": "12345678"
								}
							}
						}
					}
				},
				"responses": {
					"201": {
						"description": "successfully registered"
					},
					"400": {
						"description": "invalid request body data"
					}
				}
			}
		},
		"/api/auth/login": {
			"get": {
				"tags": ["Auth"],
				"requestBody": {
					"content": {
						"application/json": {
							"schema": {
								"type": "object",
								"example": {
									"email": "pourya@gmail.com",
									"password": "12345678"
								}
							}
						}
					}
				},
				"responses": {
					"200": {
						"description": "successfully logged in"
					},
					"400": {
						"description": "invalid request body data"
					}
				}
			}
		},
		"/api/auth/refresh-token": {
			"get": {
				"tags": ["Auth"],
				"responses": {
					"200": {
						"description": "success",
						"example": {
							"accessToken": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJzdWIiOiIxMjM0NTY3ODkwIiwibmFtZSI6IkpvaG4gRG9lIiwiaWF0IjoxNTE2MjM5MDIyfQ.SflKxwRJSMeKKF2QT4fwpMeJf36POk6yJV_adQssw5c"
						}
					}
				}
			}
		},
		"/api/watchlist": {
			"get": {
				"security": [
					{
						"bearerAuth": []
					}
				],
				"tags": ["WatchList"],
				"responses": {
					"200": {
						"description": "successfully fetched watchlist"
					}
				}
			}
		},
		"/api/watchlist/:id": {
			"delete": {
				"security": [
					{
						"bearerAuth": []
					}
				],
				"tags": ["WatchList"],
				"parameters": [
					{
						"name": "id",
						"in": "path",
						"required": true,
						"schema": {
							"type": "string",
							"example": "66d987654321098765432109"
						}
					}
				],
				"responses": {
					"200": {
						"description": "successfully deleted watchlist"
					}
				}
			},
			"post": {
				"security": [
					{
						"bearerAuth": []
					}
				],
				"parameters": [
					{
						"name": "id",
						"in": "path",
						"required": true,
						"schema": {
							"type": "string",
							"example": "66d987654321098765432109"
						}
					}
				],
				"tags": ["WatchList"],
				"responses": {
					"201": {
						"description": "کوین با موفقیت به واچلیست اضافه شد"
					},
					"400": {
						"description": "آیدی کوین نامعتبر است"
					},
					"404": {
						"description": "کوین پیدا نشد"
					}
				}
			}
		},
		"/api/wallet/": {
			"post": {
				"security": [
					{
						"bearerAuth": []
					}
				],
				"tags": ["Wallet"],
				"requestBody": {
					"content": {
						"multipart/form-data": {
							"schema": {
								"type": "object",
								"example": {
									"address": "0x0ab94c79f986bbf77df888ac25e348cc3d7c9af9"
								},
								"required": ["address"]
							}
						}
					}
				},
				"responses": {
					"201": {
						"description": "ولت با موفقیت اضافه شد"
					},
					"400": {
						"description": "یک آدرس توسط شما ثبت شده است"
					}
				}
			},
			"get": {
				"security": [
					{
						"bearerAuth": []
					}
				],
				"tags": ["Wallet"],
				"responses": {
					"200": {
						"description": "success"
					}
				}
			}
		},
		"/api/market": {
			"get": {
				"tags": ["Market"],
				"responses": {
					"200": {
						"description": "success"
					}
				}
			}
		},
		"/api/alert": {
			"get": {
				"security": [
					{
						"bearerAuth": []
					}
				],
				"tags": ["Alert"]
			},
			"post": {
				"security": [
					{
						"bearerAuth": []
					}
				],
				"tags": ["Alert"],
				"requestBody": {
					"content": {
						"multipart/form-data": {
							"schema": {
								"type": "object",
								"example": {
									"coinId": "67f437ab3418fddcabc0a305",
									"price": 125000
								},
								"required": ["coinId", "price"]
							}
						}
					}
				},
				"responses": {
					"201": {
						"description": "success"
					},
					"400": {
						"description": "invalid request body data"
					}
				}
			}
		},
		"/api/alert/:alertId": {
			"put": {
				"security": [
					{
						"bearerAuth": []
					}
				],
				"tags": ["Alert"],
				"requestBody": {
					"content": {
						"multipart/form-data": {
							"schema": {
								"type": "object",
								"example": {
									"price": 125000
								},
								"required": ["price"]
							}
						}
					}
				},
				"parameters": [
					{
						"name": "alertId",
						"in": "path",
						"required": true,
						"schema": {
							"type": "string",
							"example": "67f40d3d88ba817c66265cca"
						}
					}
				]
			},
			"delete": {
				"security": [
					{
						"bearerAuth": []
					}
				],
				"tags": ["Alert"],
				"parameters": [
					{
						"name": "alertId",
						"in": "path",
						"required": true,
						"schema": {
							"type": "string",
							"example": "67f40d3d88ba817c66265cca"
						}
					}
				]
			}
		}
	}
}
