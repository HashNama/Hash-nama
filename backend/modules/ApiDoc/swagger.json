{
	"openapi": "3.1.0",
	"info": {
		"title": "HashNama",
		"version": "1.0.0"
	},
	"components": {
		"securitySchemes": {
			"bearerAuth": {
				"type": "http",
				"scheme": "bearer",
				"bearerFormat": "JWT"
			}
		}
	},
	"tags": [
		{
			"name": "Auth"
		},
		{
			"name": "Coin"
		}
	],
	"paths": {
		"/api/auth/register": {
			"post": {
				"tags": ["Auth"],
				"requestBody": {
					"content": {
						"application/json": {
							"schema": {
								"type": "object",
								"example": {
									"username": "pourya",
									"email": "pourya@gmail.com",
									"password": "12345678"
								}
							}
						}
					}
				},
				"responses": {
					"201": {
						"description": "successfully registered"
					},
					"400": {
						"description": "invalid request body data"
					}
				}
			}
		},
		"/api/auth/login": {
			"get": {
				"tags": ["Auth"],
				"requestBody": {
					"content": {
						"application/json": {
							"schema": {
								"type": "object",
								"example": {
									"email": "pourya@gmail.com",
									"password": "12345678"
								}
							}
						}
					}
				},
				"responses": {
					"200": {
						"description": "successfully logged in"
					},
					"400": {
						"description": "invalid request body data"
					}
				}
			}
		},
		"/api/auth/refresh-token": {
			"get": {
				"tags": ["Auth"],
				"responses": {
					"200": {
						"description": "success",
						"example": {
							"accessToken": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJzdWIiOiIxMjM0NTY3ODkwIiwibmFtZSI6IkpvaG4gRG9lIiwiaWF0IjoxNTE2MjM5MDIyfQ.SflKxwRJSMeKKF2QT4fwpMeJf36POk6yJV_adQssw5c"
						}
					}
				}
			}
		},
		"/api/coin": {
			"post": {
				"tags": ["Coin"],
				"requestBody": {
					"content": {
						"multipart/form-data": {
							"schema": {
								"type": "object",
								"example": {
									"image": "image.jpg",
									"symbol": "BTC",
									"name": "bitoin"
								},
								"required": ["image", "symbol", "name"]
							}
						}
					}
				},
				"responses": {
					"201": {
						"description": "کوین با موفقیت اضافه شد"
					},
					"400": {
						"description": "invalid request body data"
					},
					"500": {
						"description": "internal server error"
					}
				}
			}
		}
	}
}
